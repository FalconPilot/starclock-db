{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "jsx": "react",
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "baseUrl": ".",
    "paths": {
      "constants/*": ["src/constants/*"],
      "constants": ["src/constants"],
      "components/*": ["src/components/*"],
      "pages/*": ["src/pages/*"],
      "styled/*": ["src/styled/*"],
      "types/*": ["src/types/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
